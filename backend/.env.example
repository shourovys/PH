# ===============================================
# Wallet API Environment Configuration
# ===============================================
# Copy this file to .env and update the values
# Do not commit .env files to version control
# ===============================================

# ===============================================
# Application Configuration
# ===============================================

# Environment: development, test, or production
# Required: Yes
# Default: development
NODE_ENV=development

# Server port number
# Required: Yes
# Default: 3000
# Range: 1-65535
PORT=3000

# ===============================================
# Database Configuration
# ===============================================

# MongoDB connection URI
# Required: Yes
# Format: mongodb://host:port or mongodb+srv://host
# Example: mongodb://localhost:27017 or mongodb+srv://cluster.mongodb.net
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name
# Required: Yes
# Example: wallet_db, wallet_production
MONGODB_DB_NAME=wallet_db

# MongoDB authentication (required in production)
# Required: No (development/test), Yes (production)
# Only needed if your MongoDB instance requires authentication
MONGODB_USER=

# MongoDB password (required in production)
# Required: No (development/test), Yes (production)
# Only needed if your MongoDB instance requires authentication
MONGODB_PASSWORD=

# ===============================================
# Security Configuration
# ===============================================

# JWT secret key for token signing
# Required: Yes
# Minimum length: 32 characters
# Maximum length: 128 characters
# Generate a secure random string for production
# Example: your-super-secret-jwt-key-min-32-chars
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# ===============================================
# Logging Configuration
# ===============================================

# Log level for application logging
# Required: Yes
# Options: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# ===============================================
# Observability Configuration
# ===============================================

# Enable Prometheus metrics collection
# Required: Yes
# Default: true
# Options: true, false
ENABLE_METRICS=true

# Enable OpenTelemetry distributed tracing
# Required: Yes
# Default: true
# Options: true, false
ENABLE_TRACING=true

# OpenTelemetry OTLP exporter endpoint
# Required: No
# Format: http://host:port/v1/traces
# Example: http://localhost:4318/v1/traces (Jaeger)
# Example: http://tempo:4318/v1/traces (Grafana Tempo)
OTEL_EXPORTER_OTLP_ENDPOINT=

# ===============================================
# Environment-Specific Notes
# ===============================================

# DEVELOPMENT:
# - Use localhost MongoDB URI
# - MONGODB_USER and MONGODB_PASSWORD can be empty
# - Use debug log level for detailed logs
# - Enable all observability features for development

# TEST:
# - Use in-memory MongoDB (handled by test setup)
# - MONGODB_USER and MONGODB_PASSWORD can be empty
# - Use warn log level to reduce test output
# - Disable metrics and tracing for faster tests

# PRODUCTION:
# - Use production MongoDB cluster URI
# - MONGODB_USER and MONGODB_PASSWORD are required
# - Use info log level for production logs
# - Enable metrics and tracing for monitoring
# - Set strong JWT_SECRET (min 32 characters)