# Test Environment Configuration
NODE_ENV=test
PORT=3001

# In-memory MongoDB (handled by mongodb-memory-server)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=wallet_test

# Test environment doesn't require authentication
MONGODB_USER=
MONGODB_PASSWORD=

# Test JWT secret (different from development)
JWT_SECRET=test-jwt-secret-key-for-testing-only-min-32-chars

# Minimal logging for tests (reduces noise)
LOG_LEVEL=warn

# Disable observability for faster test execution
ENABLE_METRICS=false
ENABLE_TRACING=false