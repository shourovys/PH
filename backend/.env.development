# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Local MongoDB (make sure MongoDB is running locally)
MONGODB_URI=mongodb://localhost:27017/smart-appointment
MONGODB_DB_NAME=smart-appointment

# Development doesn't require authentication
MONGODB_USER=
MONGODB_PASSWORD=

# Development JWT secret (use a strong secret in production)
JWT_SECRET=dev-jwt-secret-key-for-development-only-min-32-chars

# Debug logging for development
LOG_LEVEL=debug

# Enable all observability features for development
ENABLE_METRICS=true
ENABLE_TRACING=true

# Optional: Set up local Jaeger for tracing
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces